{
    "name": "scrims-bot-js",
    "version": "5.0.0",
    "description": "Main Bridge Scrims Bot",
    "author": "Bridge Scrims Developer Team",
    "license": "MIT",
    "private": true,
    "main": "dist/src/index",
    "type": "module",
    "scripts": {
        "build": "tsc && tsc-alias",
        "dev": "tsc --noCheck && concurrently \"tsc -w\" \"tsc-alias -w\"",
        "start:external": "node . external",
        "start:internal": "node . internal",
        "debug:external": "node --trace-warnings --enable-source-maps --inspect --env-file=.env . external",
        "debug:internal": "node --trace-warnings --enable-source-maps --inspect --env-file=.env . internal",
        "test": "cross-env TEST=true run-p start:*"
    },
    "dependencies": {
        "@typegoose/typegoose": "^12.17.0",
        "@vvo/tzdb": "^6.173.0",
        "ascii-table3": "^1.0.1",
        "axios": "^1.10.0",
        "discord-html-transcripts": "^3.2.0",
        "discord.js": "^14.20.0",
        "glob": "^11.0.3",
        "luxon": "^3.6.1",
        "mongoose": "^8.15.1",
        "mongoose-long": "^0.8.0",
        "redis": "^5.5.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.29.0",
        "@types/luxon": "^3.6.2",
        "@types/node": "^24.0.3",
        "concurrently": "^9.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.29.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.0",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.1"
    }
}
