{
    "name": "scrims-bot-js",
    "version": "5.0.0",
    "description": "Main Bridge Scrims Bot",
    "author": "Bridge Scrims Developer Team",
    "license": "MIT",
    "private": true,
    "main": "./dist/src/index",
    "type": "module",
    "scripts": {
        "build": "tsc --build && tsc-alias",
        "dev": "tsc --build --noCheck && concurrently \"tsc -w\" \"tsc-alias -w\"",
        "start:external": "node . external",
        "start:internal": "node . internal",
        "debug:external": "node --trace-warnings --enable-source-maps --inspect --env-file=.env . external",
        "debug:internal": "node --trace-warnings --enable-source-maps --inspect --env-file=.env . internal",
        "test": "cross-env TEST=true run-p start:*"
    },
    "dependencies": {
        "@typegoose/typegoose": "^12.15.0",
        "@vvo/tzdb": "^6.165.0",
        "ascii-table3": "^0.9.0",
        "axios": "^1.9.0",
        "discord-html-transcripts": "^3.2.0",
        "discord.js": "^14.19.3",
        "glob": "^11.0.2",
        "luxon": "^3.6.1",
        "mongoose": "^8.14.1",
        "mongoose-long": "^0.8.0",
        "redis": "^5.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@types/luxon": "^3.6.2",
        "@types/node": "^22.15.3",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.26.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "tsc-alias": "^1.8.15",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.1"
    }
}
